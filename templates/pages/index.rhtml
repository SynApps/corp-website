<section id="articles">
  <% for article in articles[0...3] %>
    <article class="post">
      <header>
        <h3><a href="<%= article.path %>"><%= article.title %></a></h3>
      </header>
      <section class="content">
        <%= article.summary %>
      </section>
      <footer>
        <span class="date"><%= article.date %></span>
      </footer>
    </article>
  <% end %>
</section>

<section id="archives">
  <%= archives[3..-1] %>
</section>

